worker_processes <%= node['nginx']['worker_processes'] %>;
user <%= node['nginx']['user'] %><% if node['nginx']['user'] != node['nginx']['group'] %> <%= node['nginx']['group'] %><% end %>;
error_log  <%= node['nginx']['log_dir'] %>/error.log<% if @env_data['flask']['debug'] %> debug<% end %>;
pid        <%= node['nginx']['pid'] %>;

events {
    worker_connections <%= node['nginx']['worker_connections'] %>;
    accept_mutex off; # "on" if nginx worker_processes > 1
    <% if node['nginx']['event'] -%>
      use <%= node['nginx']['event'] %>;
    <% end -%>
}

http {
    include       <%= node['nginx']['dir'] %>/mime.types;
    default_type  application/octet-stream;
    
    #sendfile on;  # http://stackoverflow.com/questions/6236078/how-to-clear-the-cache-of-nginx#comment7292717_6236078
    tcp_nopush on; # off may be better for *some* Comet/long-poll stuff
    tcp_nodelay off; # on may be better for some Comet/long-poll stuff
    
    keepalive_timeout 5;
    
    <% unless node['nginx']['disable_access_log'] -%>
    access_log	<%= node['nginx']['log_dir'] %>/access.log;
    <% end %>
    
    upstream app_server {
        server localhost:8000 max_fails=5 fail_timeout=10;
    }
    upstream supervisor_server {
        server localhost:9001 max_fails=5 fail_timeout=10;
    }
    
    server {
          listen 80;
          server_name <%= @env_data['server']['domain'] %>;
          
          location / {
              rewrite ^ https://$server_name$request_uri permanent;
          }
    }
    
    server {
        listen 443 ssl;
        client_max_body_size 4G;
        server_name <%= @env_data['server']['domain'] %>;
        keepalive_timeout 70;
        
        ssl_certificate      <%= node['source_dir'] %>/ssl_web.crt;
        ssl_certificate_key  <%= node['source_dir'] %>/ssl_web.key;
        ssl_session_cache    shared:SSL:10m;
        ssl_session_timeout  10m;
        ssl_protocols  SSLv2 SSLv3 TLSv1;
        ssl_ciphers  HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers   on;
        
        location ^~ /supervisor/ {
            rewrite ^/supervisor\/(.*)$ /$1 break;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_connect_timeout 30;
            proxy_read_timeout 30;
            proxy_set_header Host $http_host;
            proxy_pass http://supervisor_server;
        }
        
        location = /favicon.ico {
            alias <%= node['vine_web']['static_dir'] %>/img/favicon.ico;
        }
        location = /robots.txt {
            alias <%= node['vine_web']['static_dir'] %>/robots.txt;
        }
        location ^~ /static/jwchat/config.js {
            alias <%= node['vine_web']['jwchat_dir'] %>/htdocs.en/config.dev.vine.im.js; #TODO templatize jwchat config
        }
        location ^~ /static/jwchat/ {
            alias <%= node['vine_web']['jwchat_dir'] %>/htdocs.en/;
        }
        location ^~ /static/ {
            alias <%= node['vine_web']['static_dir'] %>/;
        }
        
        location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_connect_timeout 30;
            proxy_read_timeout 30;
            proxy_redirect off;
            if ($args ~ "^message=(\S*?)\?message=(\S*?)$") {
                set $args message=$1;                    # For some reason, there's a duplicate message arg in this URL, so get rid of it.
                rewrite ^/?(.*)$ /supervisor/ redirect;  # I think this is ok in the context of http://wiki.nginx.org/IfIsEvil ..?
            }
            proxy_pass http://app_server;
        }
        
        error_page  404              /404.html;
        error_page  500 502 503 504  /50x.html;
    }
}

